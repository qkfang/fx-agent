@page
@model FxWebNews.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "News Admin";
}

<div class="container mt-4">
    <h1 class="mb-4">News Administration</h1>

    <div class="mb-4">
        <a href="/" class="btn btn-secondary">Back to News List</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Add News Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h3>Add New Article</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">News Type</label>
                    <select class="form-select" id="type" name="type" required>
                        <option value="Good">Good News</option>
                        <option value="Bad">Bad News</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" name="author" value="FX News Team" required>
                </div>
                <button type="submit" class="btn btn-primary">Publish Article</button>
            </form>
        </div>
    </div>

    <!-- Existing News -->
    <div class="card">
        <div class="card-header">
            <h3>Existing Articles</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Published</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.News != null && Model.News.Any())
                        {
                            foreach (var article in Model.News)
                            {
                                <tr>
                                    <td>@article.Id</td>
                                    <td>@article.Title</td>
                                    <td>
                                        <span class="badge @(article.Type == "Good" ? "bg-success" : "bg-danger")">
                                            @article.Type
                                        </span>
                                    </td>
                                    <td>@article.PublishedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@article.Id" style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Are you sure you want to delete this article?')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No articles found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
