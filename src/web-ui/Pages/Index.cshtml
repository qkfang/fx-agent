@page
@model IndexModel
@{
    ViewData["Title"] = "FX Trading Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">FX Trading Dashboard</h1>

    <!-- Current FX Rate -->
    <div class="card mb-4">
        <div class="card-header">
            <h3>Current FX Rate - AUD/USD</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h2 class="text-primary">@Model.CurrentRate?.Rate.ToString("F4")</h2>
                    <small class="text-muted">Last updated: @Model.CurrentRate?.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Fund Summary -->
    <div class="card mb-4">
        <div class="card-header">
            <h3>Fund Summary</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <h5>Total Balance</h5>
                    <p class="h4 text-success">$@Model.FundSummary?.TotalBalance.ToString("N2")</p>
                </div>
                <div class="col-md-3">
                    <h5>AUD Balance</h5>
                    <p class="h4">$@Model.FundSummary?.AudBalance.ToString("N2")</p>
                </div>
                <div class="col-md-3">
                    <h5>USD Balance</h5>
                    <p class="h4">$@Model.FundSummary?.UsdBalance.ToString("N2")</p>
                </div>
                <div class="col-md-3">
                    <h5>Total P&L</h5>
                    <p class="h4 @(Model.FundSummary?.TotalProfitLoss >= 0 ? "text-success" : "text-danger")">
                        $@Model.FundSummary?.TotalProfitLoss.ToString("N2")
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Transaction History -->
    <div class="card">
        <div class="card-header">
            <h3>Buy & Sell Activity</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Currency Pair</th>
                            <th>Amount</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Date/Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Transactions != null)
                        {
                            foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.Id</td>
                                    <td>
                                        <span class="badge @(transaction.Type == "Buy" ? "bg-success" : "bg-danger")">
                                            @transaction.Type
                                        </span>
                                    </td>
                                    <td>@transaction.CurrencyPair</td>
                                    <td>$@transaction.Amount.ToString("N2")</td>
                                    <td>@transaction.Rate.ToString("F4")</td>
                                    <td>$@transaction.Total.ToString("N2")</td>
                                    <td>@transaction.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
